+						}
+					}
+				    }
+				    LISTADD(mfx->provides->ac_domains, ac_domain);
+			    } else 
+				    return -1;
+		    } else  {
+			    if (name) free((void *)name);
+			    if (policy) free((void *)policy);	
+			    if (plist) free((void *)plist);	
+			    return -1;
+		    }
+	    } else if (!strcmp(ASCII(node), "request")) {
+		    int res = msmProcessDRequest(reader, define);
+		    if (res < 0) return res;

+    keyinfo_x *keyinfo;
+    pgpDig dig = (pgpDig)param;
+
+    for (origin = sw_source->origins; origin; origin = origin->prev) {
+	    for (keyinfo = origin->keyinfos; keyinfo; keyinfo = keyinfo->prev) {
+	        pgpDig ddig = pgpNewDig();

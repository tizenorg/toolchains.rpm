+    while (package) {
+	if (!package->newer) {
+	    xmlNode *node = xmlNewNode(NULL, BAD_CAST "package");
+	    xmlNewProp(node, BAD_CAST "name", BAD_CAST package->name);
+	    if (package->modified) 
